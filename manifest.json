{
    "name": "CalendarThat Extension",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Right-click to send highlighted text to CalendarThat.",
    "permissions": [
      "contextMenus",
      "storage",
      "scripting",
      "downloads",
      "activeTab"
    ],
    "host_permissions": [
      "https://calendarthat.com/*",
      "https://calendarthatv2-calendarthatv2-pr-18.up.railway.app/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/logged_out_16.png",
        "32": "icons/logged_out_32.png",
        "48": "icons/logged_out_48.png",
        "128": "icons/logged_out_128.png"
      }
    },
    "background": {
      "service_worker": "listeners.js",
      "type": "module"
    },
    "icons": {
      "16": "icons/logged_out_16.png",
      "32": "icons/logged_out_32.png",
      "48": "icons/logged_out_48.png",
      "128": "icons/logged_out_128.png"
    }
  }