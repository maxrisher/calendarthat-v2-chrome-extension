{
    "name": "CalendarThat Extension",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Right-click to send highlighted text to CalendarThat.",
    "permissions": [
      "contextMenus",
      "storage"
    ],
    "host_permissions": [
      "https://calendarthat.com/*",
      "https://calendarthatv2-calendarthatv2-pr-18.up.railway.app/*"
    ],
    "background": {
      "service_worker": "background.js"
    }
  }